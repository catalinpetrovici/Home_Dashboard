// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRE_URL")
}

// https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference

model User {
  id               String           @id @unique @default(cuid())
  createdAt        DateTime         @default(now()) @map("created_at")
  updatedAt        DateTime         @updatedAt @map("updated_at")
  lastName         String           @map("last_name") @db.VarChar(20)
  firstName        String           @map("first_name") @db.VarChar(20)
  email            String           @unique
  phoneNumber      String           @unique @map("phone_number")
  role             Role             @default(UNVERIFIED)
  verificationCode String?          @map("verification_code")
  password         String           @unique
  userPreferences  UserPreferences?
  UserAuthLog      UserAuthLog[]
  Session          UserSession[]

  @@index([email])
  @@map("users")
}

model UserSession {
  userId       String   @map("user_id")
  sessionToken String   @unique @map("session_token") @db.Text
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_session")
}

model UserPreferences {
  userId   String  @unique @map("user_id")
  darkMode Boolean @default(true) @map("dark_mode")
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

model UserAuthLog {
  userId    String   @map("user_id")
  logDate   DateTime @default(now()) @map("log_date")
  eventType String   @map("event_type")
  userAgent String   @map("user_agent")
  message   String?  @db.Text
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, logDate])
  @@map("users_auth_log")
}

model Device {
  deviceName     String        @map("device_name")
  defaultName    String?       @map("default_name")
  deviceFamily   String        @map("device_family")
  topic          String        @unique
  type           DeviceType    @default(UNSPECIFIED)
  isDataRecorded Boolean?      @default(false) @map("is_data_recorded")
  columnDasboard Int?          @map("column_dasboard")
  lineDasboard   Int?          @map("line_dasboard")
  data           String
  createdAt      DateTime      @default(now()) @map("created_at")
  updatedAt      DateTime      @updatedAt @map("updated_at")
  topicRecord    TopicRecord[]
  // DeviceStatus   DeviceStatus  @relation(fields: [deviceName], references: [deviceName])

  @@id([topic])
  @@map("device")
}

model DeviceStatus {
  deviceName String @unique @map("device_name")
  status     Status @default(UNKNOWN)
  // device     Device[]

  @@map("device_status")
}

model TopicRecord {
  topic     String
  createdAt DateTime @default(now()) @map("created_at")
  data      String
  Device    Device?  @relation(fields: [topic], references: [topic])

  @@id([topic, createdAt])
  @@map("topic_record")
}

enum DeviceType {
  UNSPECIFIED
  STATUS
  HUMIDITY
  TEMPERATURE
  ELECTRICPOWER
  MOTIONSENSOR
  LEDSTRIP
  SWITCH
  SLIDER
  DISPLAY
  TEXT
}

enum Role {
  BASIC
  ADMIN
  UNVERIFIED
  LOST
  BLOCKED
}

enum Status {
  UNKNOWN
  ONLINE
  OFFLINE
}
